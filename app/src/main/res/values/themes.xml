<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.JetStories" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/purple_200</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash_story</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.JetStories</item>
    </style>

</resources>